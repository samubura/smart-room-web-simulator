{
  "@context": "https://www.w3.org/2019/wot/td/v1",
  "title": "soilChecker",
  "@type": "SoilCheckerTractor",
  "id": "http://localhost:3000/workspaces/smart-farming/things/soilChecker",
  "base": "http://localhost:3000/affordances/smart-farming/soilChecker/",
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "security": "nosec_sc",
  "properties": {
    "position": {
      "description": "Current position of the tractor",
      "observable": false,
      "readOnly": true,
      "type": "integer",
      "forms": [
        {
          "op": [
            "readproperty"
          ],
          "href": "position"
        }
      ]
    },
    "direction": {
      "description": "Current direction of the tractor 0 is forward 1 is right 2 is backward and 3 is left",
      "observable": false,
      "readOnly": true,
      "type": "integer",
      "forms": [
        {
          "op": [
            "readproperty"
          ],
          "href": "direction"
        }
      ]
    },
    "soilCondition": {
      "title": "Soil condition",
      "observable": false,
      "readOnly": true,
      "type": "object",
      "properties":{
        "ph":{"type":"integer", "minimum":0, "maximum":255},
        "moisture":{"type":"integer", "minimum":0, "maximum":255},
        "density":{"type":"integer", "minimum":0, "maximum":255},
        "nitrate":{"type":"integer", "minimum":0, "maximum":255}
      },	 
      "forms": [
        {
          "op": [
            "readproperty"
          ],
          "href": "soilcondition"
        }
      ]
    }
  },
  "actions": {
    "moveToField": {
      "description": "move to field",
      "input":{
            "type": "integer",
            "minimum": 0,
            "maximum": 8
      },
      "output":{
        "type": "number"
      },
      "forms": [
        {
          "href": "movetofield",
          "op": "invokeaction",
          "contentType": "application/json"
        }
      ]
    },
    "goHome": {
      "description": "go home",
      "output":{
        "type": "number"
      },
      "forms": [
        {
          "href": "gohome",
          "op": "invokeaction",
          "contentType": "application/json"
        }
      ]
    }
	},
  "events": {}
}