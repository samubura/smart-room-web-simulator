{
    "@context": "https://www.w3.org/2019/wot/td/v1",
    "title": "soilChecker",
    "@type": "SoilCheckerTractor",
    "id": "http://localhost:3000/workspaces/smart-farming/things/soilChecker",
    "base": "http://localhost:3000/affordances/smart-farming/soilChecker/",
    "securityDefinitions": {
      "nosec_sc": {
        "scheme": "nosec"
      }
    },
    "security": "nosec_sc",
    "properties": {
      "position": {
        "description": "Current position of the tractor",
        "observable": false,
        "readOnly": true,
        "type": "object",
        "properties": {
            "x": {
                "type": "integer"
            },
            "y": {
              "type": "integer"
          }
        },
        "required": ["x","y"],
        "forms": [
          {
            "op": [
              "readproperty"
            ],
            "href": "position"
          }
        ]
      },
      "direction": {
        "description": "Current direction of the tractor 0 is forward 1 is right 2 is backward and 3 is left",
        "observable": false,
        "readOnly": true,
        "type": "integer",
        "forms": [
          {
            "op": [
              "readproperty"
            ],
            "href": "direction"
          }
        ]
      }
    },
    "actions": {
      "moveToField": {
        "description": "Make the tractor move to a field, return the number of seconds needed to perform the movement, -1 if the position is not reachable",
        "input":{
          "type": "object",
          "properties": {
              "x": {
                  "type": "integer"
              },
              "y": {
                "type": "integer"
            }
          },
          "required": ["x","y"]
        },
        "output":{
          "type": "number"
        },
        "forms": [
          {
            "href": "movetofield",
            "op": "invokeaction",
            "contentType": "application/json"
          }
        ]
      },
      "goHome": {
        "description": "Make the tractor go back home, returns the number of seconds needed to reach destination",
        "output":{
          "type": "number"
        },
        "forms": [
          {
            "href": "gohome",
            "op": "invokeaction",
            "contentType": "application/json"
          }
        ]
      },
      "checkSoilHumidity": {
        "description": "Check the soil humidity and return the result.",
        "output":{
          "type": "object",
          "properties": {
            "humidity": {"type": "integer"}
          },
          "required": ["humidity"]
        },
        "forms": [
          {
            "href": "checksoil",
            "op": "invokeaction",
            "contentType": "application/json"
          }
        ]
      }
    },
    "events": {}
  }