{
  "@context": "https://www.w3.org/2019/wot/td/v1",
  "title": "soilChecker",
  "@type": "SoilCheckerTractor",
  "id": "http://10.2.2.187/workspaces/smart-farming/things/soilChecker",
  "base": "http://10.2.2.187/affordances/smart-farming/soilChecker/",
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "security": "nosec_sc",
  "properties": {
    "position": {
      "description": "Current position of the tractor",
      "observable": false,
      "readOnly": true,
      "type": "integer",
      "forms": [
        {
          "op": [
            "readproperty"
          ],
          "href": "position"
        }
      ]
    },
    "direction": {
      "description": "Current direction of the tractor 0 is forward 1 is right 2 is backward and 3 is left",
      "observable": false,
      "readOnly": true,
      "type": "integer",
      "forms": [
        {
          "op": [
            "readproperty"
          ],
          "href": "direction"
        }
      ]
    }
  },
  "actions": {
    "moveToField": {
      "description": "Make the tractor move to a field",
      "input":{
            "type": "integer",
            "minimum": 0,
            "maximum": 8
      },
      "output":{
        "type": "number"
      },
      "forms": [
        {
          "href": "movetofield",
          "op": "invokeaction",
          "contentType": "application/json"
        }
      ]
    },
    "goHome": {
      "description": "Make the tractor go back home",
      "output":{
        "type": "number"
      },
      "forms": [
        {
          "href": "gohome",
          "op": "invokeaction",
          "contentType": "application/json"
        }
      ]
    },
    "checkSoilHumidity": {
      "description": "Check the soil humidity and return the result.",
      "output":{
        "type": "object",
        "properties": {
          "humidity": {"type": "integer"}
        },
        "required": ["humidity"]
      },
      "forms": [
        {
          "href": "checksoil",
          "op": "invokeaction",
          "contentType": "application/json"
        }
      ]
    }
  },
  "events": {}
}