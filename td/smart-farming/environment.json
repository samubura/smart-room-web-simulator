{
    "@context": "https://www.w3.org/2019/wot/td/v1",
    "title": "environment",
    "@type": "GridFieldEnvironment",
    "id": "http://localhost:3000/workspaces/smart-farming/things/environment",
    "base": "http://localhost:3000/affordances/smart-farming/environment/",
    "securityDefinitions": {
      "nosec_sc": {
        "scheme": "nosec"
      }
    },
    "security": "nosec_sc",
    "properties": {},
    "actions": {
      "rain": {
        "description": "Set all the fields to maxHumidity",
        "forms": [
          {
            "href": "rain",
            "op": "invokeaction",
            "contentType": "application/json"
          }
        ]
      },
      "dryAll": {
        "description": "Set all the fields to minHumidity",
        "forms": [
          {
            "href": "dryAll",
            "op": "invokeaction",
            "contentType": "application/json"
          }
        ]
      }, 
      "irrigate": {
        "description": "Irrigate the field at the selected position",
        "input":{
          "type": "object",
          "properties": {
              "x": {
                  "type": "integer"
              },
              "y": {
                "type": "integer"
            }
          },
          "required": ["x","y"]
        },
        "forms": [
          {
            "href": "irrigate",
            "op": "invokeaction",
            "contentType": "application/json"
          }
        ]
      },
      "dry": {
        "description": "Dry the field at the selected position",
        "input":{
          "type": "object",
          "properties": {
              "x": {
                  "type": "integer"
              },
              "y": {
                "type": "integer"
            }
          },
          "required": ["x","y"]
        },
        "forms": [
          {
            "href": "dry",
            "op": "invokeaction",
            "contentType": "application/json"
          }
        ]
      }
    },
    "events": {}
  }