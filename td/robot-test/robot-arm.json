{
    "@context": "https://www.w3.org/2019/wot/td/v1",
    "@type": "RobotArm",
    "id": "http://localhost:3000/workspaces/pslab/things/robot-arm",
    "title": "robot-arm",
    "base": "http://localhost:3000/affordances/pslab/robot-arm/",
    "securityDefinitions": {
        "nosec_sc": {
            "scheme": "nosec"
        }
    },
    "security": [
        "nosec_sc"
    ],
    "actions": {
        "goSphere":{
            "forms": [
                {
                    "href": "goSphere",
                    "op": "invokeaction",
                    "contentType": "application/json"
                }
            ],
            "safe": false,
            "idempotent": true
        },
        "goTall":{
            "forms": [
                {
                    "href": "goTall",
                    "op": "invokeaction",
                    "contentType": "application/json"
                }
            ],
            "safe": false,
            "idempotent": true

        },
        "goMiddle":{
            "forms": [
                {
                    "href": "goMiddle",
                    "op": "invokeaction",
                    "contentType": "application/json"
                }
            ],
            "safe": false,
            "idempotent": true
        },
        "writeAngles": {
            "input": {
                "type": "object",
                "properties": {
                    "jointAngles": {
                        "type": "object",
                        "properties": {
                            "J1":{
                                "type": "number",
                                "minimum": -160,
                                "maximum": 160
                            },
                            "J2":{
                                "type": "number",
                                "minimum": -160,
                                "maximum": 160
                            },
                            "J3":{
                                "type": "number",
                                "minimum": -160,
                                "maximum": 160
                            },
                            "J4":{
                                "type": "number",
                                "minimum": -160,
                                "maximum": 160
                            },
                            "J5": {
                                "type": "number",
                                "minimum": -160,
                                "maximum": 160
                            },
                            "J6":{
                                "type": "number",
                                "minimum": -160,
                                "maximum": 160
                            }
                        },
                        "required": [
                            "J1",
                            "J2",
                            "J3",
                            "J4",
                            "J5",
                            "J6"
                        ]
                    },
                    "speed": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100
                    }
                },
                "required": [
                    "jointAngles",
                    "speed"
                ]
            },
            "forms": [
                {
                    "href": "writeAngles",
                    "op": "invokeaction",
                    "contentType": "application/json"
                }
            ],
            "safe": false,
            "idempotent": true
        },
        "writeAngle": {
            "input": {
                "type": "object",
                "properties": {
                    "jointId": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 6
                    },
                    "angle": {
                        "type": "number",
                        "minimum": -160,
                        "maximum": 160
                    },
                    "speed": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100
                    }
                },
                "required": [
                    "jointId",
                    "angle",
                    "speed"
                ]
            },
            "forms": [
                {
                    "href": "writeAngle",
                    "op": "invokeaction",
                    "contentType": "application/json"
                }
            ],
            "safe": false,
            "idempotent": true
        },
        "setColor": {
            "input": {
                "type": "object",
                "properties": {
                    "color": {
                        "type": "string"
                    }
                },
                "required": ["color"]
            },
            "forms": [
                {
                    "href": "setColor",
                    "op": "invokeaction",
                    "contentType": "application/json"
                }
            ],
            "safe": false,
            "idempotent": true
        },
        "setGripper": {
            "input": {
                "type": "object",
                "properties": {
                    "value": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100
                    },
                    "speed": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100
                    }
                },
                "required": [
                    "value",
                    "speed"
                ]
            },
            "forms": [
                {
                    "href": "setGripper",
                    "op": "invokeaction",
                    "contentType": "application/json"
                }
            ],
            "safe": false,
            "idempotent": true
        }
    }
}